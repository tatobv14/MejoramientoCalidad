@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ProyectoMejoramiento.Models.Producto>

<h1>Inventario de Productos</h1>

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success">@TempData["MensajeExito"]</div>
}

<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="cadenaBusqueda" placeholder="Buscar por nombre..." value="@Context.Request.Query["cadenaBusqueda"]" class="form-control" />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>CÃ³digo de Barras</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var stockBajo = item.Stock <= 5;
            <tr class="@(stockBajo ? "table-danger" : "")">
                <td>@item.Nombre</td>
                <td>@item.CodigoDeBarras</td>
                <td>@item.Precio.ToString("C")</td>
                <td>@item.Stock</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Crear" class="btn btn-success">Nuevo Producto</a>